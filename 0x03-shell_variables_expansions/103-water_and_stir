#!/bin/bash

# Retrieve the values from the environment variables
water=$WATER
stir=$STIR

# Check if either of the variables is unset or empty
if [ -z "$water" ] || [ -z "$stir" ]; then
    echo "One or both variables are unset or empty."
    exit 1
fi

# Perform the addition
result=$((water + stir))

# Print the result
echo "The sum of WATER ($water) and STIR ($stir) is: $result"
